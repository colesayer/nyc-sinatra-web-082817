<form action="/figures" method="post">
  <input type="text" id="figure_name" name="figure[name]">
  <%Title.all.each do |title| %>
  <%=title.name%><input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>">
  <%end%>
  <input type="text" id="new_title" name="title[name]">

  <%Landmark.all.each do |landmark| %>
  <%=landmark.name%><input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>">
  <%end%>

  <input type="text" id="new_landmark" name="landmark[name]">
  <input type="submit" id="Submit" value="Create New Figure">

</form>
